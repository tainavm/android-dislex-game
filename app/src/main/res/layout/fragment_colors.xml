<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/text"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <GridLayout
        android:id="@+id/grid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="4">

        <Button
            android:id="@+id/btn_colorRed"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="1"
            android:backgroundTint="@color/colorRed" />

        <Button
            android:id="@+id/btn_colorYellow"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="2"
            android:backgroundTint="@color/colorYellow" />

        <Button
            android:id="@+id/btn_colorBlue"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_row="1"
            android:backgroundTint="@color/colorBlue" />

        <Button
            android:id="@+id/btn_colorGreen"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_row="2"
            android:backgroundTint="@color/colorGreen" />

        <Button
            android:id="@+id/btn_colorPurple"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="3"
            android:backgroundTint="@color/colorPurple" />

        <Button
            android:id="@+id/btn_colorPink"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_row="3"
            android:backgroundTint="@color/colorPink" />

    </GridLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/text2"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Escreva aqui"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimaryDark"
            android:text="PrÃ³xima"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>
