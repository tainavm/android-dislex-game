<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/text"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <GridLayout
        android:id="@+id/grid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="4">

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextGreen"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="@color/colorGreen"
            android:text="@string/color_red"
            android:textSize="25sp"
            android:backgroundTint="@color/greyDark" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextBlue"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25sp"
            android:text="Amarelo"
            android:textColor="@color/colorBlue"
            android:backgroundTint="@color/greyDark" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextPurple"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="25sp"
            android:text="Azul"
            android:textColor="@color/colorPurple"
            android:backgroundTint="@color/greyDark" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextRed"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="25sp"
            android:text="Verde"
            android:textColor="#e13232"
            android:backgroundTint="@color/greyDark" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextPink"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25sp"
            android:text="Roxo"
            android:textColor="@color/colorPink"
            android:backgroundTint="@color/greyDark" />

        <Button
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/btnTextYellow"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25sp"
            android:text="Rosa"
            android:textColor="@color/colorYellow"
            android:backgroundTint="@color/greyDark" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimaryDark"
            android:text="PrÃ³xima"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
